set nocompatible

set tabstop=2
set shiftwidth=2
set smartindent
set number

set smartcase
set incsearch
set hlsearch
set gdefault
set showmatch

set winwidth=84
set winheight=5
set winminheight=5
set winheight=999

set encoding=utf-8
set fileencoding=utf-8

set cursorline
set cc=80


"call pathogen#infect()

colorscheme evening

imap <Tab> <C-n>
imap <S-Tab> <C-p>
